{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES2019",
    "jsx": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": [
      "dom",
      "es2020"
    ],
    "rootDir": "src",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "~/*": [
        "./*"
      ],
    }
  },
  "exclude": ["dist/**/*"]
}
